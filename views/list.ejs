<%- include("header"); -%>

  <div class="box" id="heading">
    <h1> <%= kindOfDay %> </h1>
  </div>

  <div class="box">

    <% newItem.forEach(function(element){ %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= element._id %>" onChange="this.form.submit()">
          <p> <%= element.name %> </p>
        </div>
        <input type="hidden" name="listName" value="<%= kindOfDay %>"></input>
      </form>
    <% }); %>

    <form class="item" action="/" method="post">
      <input type="text" name="nextItem" placeholder="New Task" autocomplete="off">
      <button type="submit" name="list" value="<%= kindOfDay %>">+</button>
    </form>

  </div>

  <div class="box">
    <form action="/custom" method="post">
      <input type="text" name="customList" placeholder="Enter Name for Custom List" autocomplete="off">
      <button type="submit" name="custom">Show Custom List</button>
    </form>
  </div>


<%- include("footer"); -%>
